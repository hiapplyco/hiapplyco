{
  "project": {
    "name": "HiApply",
    "type": "ai-recruitment-platform",
    "version": "2.0.0",
    "description": "AI-powered recruitment and hiring platform"
  },
  "swarm": {
    "defaults": {
      "topology": "hierarchical",
      "maxAgents": 10,
      "strategy": "adaptive",
      "parallelExecution": true
    },
    "presets": {
      "recruitment": {
        "topology": "hierarchical",
        "agents": ["ai-recruiter", "analyst", "coordinator", "optimizer"],
        "strategy": "parallel"
      },
      "development": {
        "topology": "mesh",
        "agents": ["architect", "coder", "tester", "reviewer"],
        "strategy": "adaptive"
      },
      "analysis": {
        "topology": "star",
        "agents": ["researcher", "analyst", "documenter"],
        "strategy": "sequential"
      }
    }
  },
  "ai": {
    "models": {
      "primary": "gpt-4",
      "fallback": "gpt-3.5-turbo",
      "specialized": {
        "matching": "text-embedding-ada-002",
        "nlp": "bert-base-uncased",
        "vision": "clip-vit-base-patch32"
      }
    },
    "features": {
      "predictiveHiring": true,
      "biasReduction": true,
      "continuousLearning": true,
      "explainableAI": true
    }
  },
  "integrations": {
    "platforms": {
      "linkedin": {
        "enabled": true,
        "apiVersion": "v2",
        "rateLimit": 1000
      },
      "github": {
        "enabled": true,
        "searchScope": ["users", "repos", "code"]
      },
      "indeed": {
        "enabled": true,
        "regions": ["us", "uk", "ca"]
      }
    },
    "communication": {
      "email": {
        "provider": "sendgrid",
        "templates": true
      },
      "slack": {
        "enabled": false,
        "webhooks": []
      }
    }
  },
  "automation": {
    "workflows": {
      "candidateScreening": {
        "enabled": true,
        "stages": ["parse", "match", "score", "rank"],
        "autoReject": false
      },
      "interviewScheduling": {
        "enabled": true,
        "calendar": "google",
        "bufferTime": 15
      },
      "referenceChecks": {
        "enabled": false,
        "automated": false
      }
    },
    "triggers": {
      "newApplication": ["parse", "screen", "notify"],
      "interviewComplete": ["collectFeedback", "updateStatus"],
      "offerAccepted": ["onboarding", "documentation"]
    }
  },
  "performance": {
    "caching": {
      "enabled": true,
      "ttl": 3600,
      "storage": "memory"
    },
    "optimization": {
      "lazyLoading": true,
      "bundleSize": "optimized",
      "imageOptimization": true
    },
    "monitoring": {
      "metrics": true,
      "errorTracking": true,
      "userAnalytics": true
    }
  },
  "security": {
    "authentication": {
      "providers": ["email", "google", "linkedin"],
      "mfa": false,
      "sessionTimeout": 86400
    },
    "dataProtection": {
      "encryption": "aes-256",
      "pii": {
        "masking": true,
        "retention": 90
      }
    },
    "compliance": {
      "gdpr": true,
      "ccpa": true,
      "eeoc": true
    }
  },
  "development": {
    "environment": "development",
    "debugging": {
      "verbose": false,
      "logLevel": "info"
    },
    "testing": {
      "framework": "jest",
      "coverage": 80,
      "e2e": "playwright"
    },
    "ci": {
      "provider": "github-actions",
      "autoDeployment": false
    }
  },
  "hooks": {
    "customHooks": {
      "preCommit": "npm run lint && npm test",
      "postDeploy": "npm run smoke-test",
      "preRelease": "npm run build && npm run test:e2e"
    }
  },
  "experimental": {
    "features": {
      "aiAgents": true,
      "swarmIntelligence": true,
      "neuralPatterns": true,
      "quantumRouting": false
    }
  }
}